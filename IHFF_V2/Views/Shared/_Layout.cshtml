<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - IHFF</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        <script type="text/javascript" src="~/Content/Js/PlusMinus.js"></script>

        @Styles.Render("~/Content/css")

            @RenderSection("Styles", required: false)

        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <header>
            <div>
                <div>
                    <nav>
                        <ul id="menu">
                            <li class="invisible-straightener"></li>
                            <li>@Html.ActionLink("Food", "Index", "Restaurant")</li>
                            <li>@Html.ActionLink("Film", "Index", "FilmOverzicht")</li>
                            <li>@Html.ActionLink("IHFF", "Index", "Home")</li>
                            <li>@Html.ActionLink("Culture", "Index", "Cultuur")</li>
                            <li>@Html.ActionLink("Specials", "Index", "SpecialOverzicht")</li>
                            <li class="winkelwagen-container"><div class="winkelwagen" >@Html.ActionLink("Winkelw", "Index", "Cart")</div></li>
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div id="footer" >
                <div>
                    <div>@Html.ActionLink("Contact", "Contact", "Home") <br /> &copy; @DateTime.Now.Year - Copyright Groep 5 </div>
                </div>
            </div id="footer">
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
    </body>
</html>
