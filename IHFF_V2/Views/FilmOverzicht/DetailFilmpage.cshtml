@model IHFF_V2.Models.DetailFilmViewModel
@using IHFF_V2

@{
    ViewBag.Title = "DetailFilmpage";
}
@{ var e = Model.Event; var f = Model.Film; } <!-- twee model variabele aangemaakt -->

<h2>@e.Titel</h2>
 
@if (e.Poster != null)
{
    <img src="@Blobmanager.ImageSource(e.Poster)" height="240" width="163" />
}

@e.Beschrijving
@f.Acteur
@f.Regisseur
@f.Jaar
@e.Locatie
